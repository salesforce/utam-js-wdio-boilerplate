{
    "root": true,
    "selector": {
        "css": "my-app"
    },
    "shadow": {
        "elements": [
            {
                "name": "navbar",
                "selector": {
                    "css": "ui-navbar"
                },
                "type": "utam-js-webdriverio-boilerplate/pageObjects/lwc-navbar",
                "public": true
            },            
            {
                "name": "content",
                "selector": {
                    "css": "article.container div"
                },
                "elements": [
                    {
                        "name": "recipe",
                        "selector": {
                            "css": ":scope > *:nth-child(%d)",
                            "args": [
                                {
                                    "name": "index",
                                    "type": "number"
                                }
                            ]
                        },
                        "type": "container",
                        "public": true
                    }
                ]
            }
        ]
    }
}